<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed (clicked) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722"/> <!-- Orange when pressed -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#E64A19" /> <!-- Darker orange border -->
        </shape>
    </item>

    <!-- Default state when the button is not pressed -->
    <item>
        <shape>
            <solid android:color="#4CAF50"/> <!-- Green when not pressed -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#388E3C" /> <!-- Dark green border -->
        </shape>
    </item>
</selector>